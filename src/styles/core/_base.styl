*
    box-sizing: border-box

html, body
    height: 100%

body
    margin: 0
    padding: 0
    background-color: #eee
    font-family: 'Arimo', sans-serif

main
    margin: 0 auto
    padding: 1em
    max-width: 90em

nav
    a
        display: inline-block
        margin: 0 0.5em 0.5em

h1, h2, h3
    font-family: 'Playfair Display', serif

p, li
    line-height: 130%
