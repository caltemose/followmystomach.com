*
    box-sizing: border-box

html, body
    height: 100%

body
    margin: 0
    padding: 0
    background-color: #fff
    font-family: 'Crimson Text', serif

body > main
    padding-bottom: 1em

    @media (min-width: 768px)
        padding-bottom: 2em

h1, h2, h3
    font-family: 'Roboto Condensed', sans-serif
    font-weight: normal

h2
    margin-top: 1.5em

h3
    margin-bottom: 0.5em
    font-size: 1.3em
    font-weight: normal

p, li, dd, dt
    font-size: 1.3rem
    line-height: 130%

li
    margin-bottom: 0.5em

    h3
        margin: 0 0 0.5em
        font-size: 1.25rem

    ul
        margin-bottom: 1em

li li
    list-style-type: disc
// colorText = #333
// colorTextLight = #888
// colorAnchor = rgb(70, 118, 196)
// colorAnchorActive = darken(colorAnchor, 20%)

dt
    margin-bottom: 0.2em
    font-style: italic
dd
    margin: 0 0 1em


a
    color: colorAnchor //rgb(26, 94, 221)
    text-decoration: none

    &:hover, &:focus
        color: colorAnchorActive
        text-decoration: underline

    &:focus
        color: #000
        outline: none

    &:visited
        color: colorAnchorActive
